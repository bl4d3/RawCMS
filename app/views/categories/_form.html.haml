.group
  = f.label :name, t("activerecord.attributes.category.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
.group
  = f.label :content, t("activerecord.attributes.category.content", :default => "Content"), :class => :label
  = f.text_area :content, :class => 'text_area'
.group
  = f.label :parent_id, t("activerecord.attributes.category.parent_id", :default => "Parent"), :class => :label
  = f.number_field :parent_id, :class => 'number_field'
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), categories_path, :class => "text_button_padding link_button"
