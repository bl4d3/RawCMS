.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", posts_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_post_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", post_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.post.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @post.title
      %p
        %b
          = t("activerecord.attributes.post.short_description", :default => t("activerecord.labels.short_description", :default => "Short description"))
          \:
        = @post.short_description
      %p
        %b
          = t("activerecord.attributes.post.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @post.description
      %p
        %b
          = t("activerecord.attributes.post.is_public", :default => t("activerecord.labels.is_public", :default => "Is public"))
          \:
        = @post.is_public
      %p
        %b
          = t("activerecord.attributes.post.category_id", :default => t("activerecord.labels.category_id", :default => "Category"))
          \:
        = @post.category_id
      %p
        %b
          = t("activerecord.attributes.post.user_id", :default => t("activerecord.labels.user_id", :default => "User"))
          \:
        = @post.admin.email
      %p
        %b
          = t("activerecord.attributes.post.tag_keyword", :default => t("activerecord.labels.tag_keyword", :default => "Tag keyword"))
          \:
        = @post.tag_keyword
      %p
        %b
          = t("activerecord.attributes.post.text_description", :default => t("activerecord.labels.text_description", :default => "Text description"))
          \:
        = @post.text_description
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_post_path(@post), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), post_path(@post), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
