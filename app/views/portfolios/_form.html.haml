  = f.text_field :name, :class => 'text_field'
.group
  = f.label :description, t("activerecord.attributes.portfolio.description", :default => "Description"), :class => :label
  = f.text_area :description, :class => 'text_area'
.group
  = f.label :skill, t("activerecord.attributes.portfolio.skill", :default => "Skill"), :class => :label
  = f.text_field :skill, :class => 'text_field'
.group
  = f.label :order_show, t("activerecord.attributes.portfolio.order_show", :default => "Order show"), :class => :label
  = f.number_field :order_show, :class => 'number_field'
.group
  = f.label :is_public, t("activerecord.attributes.portfolio.is_public", :default => "Is public"), :class => :label
