.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", portfolios_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_portfolio_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_portfolio_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Portfolio
    .inner
      = form_for @portfolio, :url => portfolio_path(@portfolio), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
